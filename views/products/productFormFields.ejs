<div class="form-row">
  <label for="name">Name: </label>
  <input type="text" name="name" id="name" required value="<%= locals.product != null ? product.name : '' %>">
</div>
<div class="form-row">
  <label for="manufacturer_id">Manufacturer: </label>
  <select name="manufacturer_id" id="manufacturer_id" required>
    <% manufacturers.forEach((manufacturer) => { %>
      <option value="<%= manufacturer.id %>" <%- locals.product != null && manufacturer.id == product.manufacturer_id ? 'selected' : '' %>><%= manufacturer.name %></option>
    <% }); %>
  </select>
</div>
<div class="form-row">
  <label for="price">Price: </label>
  <input type="text" name="price" id="price" inputmode="numeric" pattern="\d+.\d{2}" required value="<%= locals.product != null ? product.price : '' %>">
</div>
<div class="form-row">
  <label for="description">Description: </label>
  <textarea name="description" id="description" placeholder="Describe the item..."><%= locals.product != null ? product.description : '' %></textarea>
</div>
<div class="form-row-h">
  <label for="available">Available: </label>
  <input type="checkbox" name="available" id="available" <%- locals.product != null && !product.available ? '' : 'checked' %>>
</div>
<% if (locals.images && images.length > 0) { %>
  <div class="form-row">
    <label>Existing images: </label>
    <ul class="list-no-style">
    <% images.forEach((image) => { %>
        <li>
          <h3><%= image.alt_text %></h3>
          <img src="/<%= image.img_url %>" alt="">
        </li>
    <% }); %>
    </ul>
  </div>
<% }; %>
<div class="form-row">
  <label for="category_ids[]">Categories: </label>
  <select name="category_ids[]" id="category_ids" multiple>
    <% categories.forEach((category) => { %>
      <option value="<%= category.id %>" <%- locals.product != null && selectedCategoryIds.includes(category.id) ? 'selected' : '' %>><%= category.name %></option>
    <% }); %>
  </select>
</div>
