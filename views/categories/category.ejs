<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>
  <h1><%= category.name %></h1>
  <% if (locals.products != null && products.length > 0) { %>
    <ul>
    <% products.forEach((product) => { %>
      <a href="/product/<%= product.id %>">
        <li><%= product.name %></li>
      </a>
    <% }); %>
    </ul>
  <% }; %>
  <a href="/category/<%= category.id %>/edit">Edit category</a>
  <a href="/category/<%= category.id %>/delete">Delete category</a>
</body>
</html>